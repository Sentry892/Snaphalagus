---
// Blog page about presents
import logoImage from '../assets/snaphalagus_logo-removebg-preview.png';

const siteUrl = 'https://snaphalagulus.eu';
const defaultLang = 'en';

// SEO data for both languages
const seoData: Record<string, { title: string; description: string; keywords: string; lang: string }> = {
	en: {
		title: 'Blog - Snaphalagulus | Gift Ideas & Present Inspiration',
		description: 'Discover the best personalized gift ideas and present inspiration. Learn why custom clothing makes perfect gifts for birthdays, holidays, anniversaries, and special occasions.',
		keywords: 'gift ideas, personalized gifts, present ideas, custom gift ideas, birthday gifts, holiday gifts, anniversary gifts, graduation gifts, corporate gifts, custom clothing gifts',
		lang: 'en'
	},
	it: {
		title: 'Blog - Snaphalagulus | Idee Regalo e Ispirazione per Regali',
		description: 'Scopri le migliori idee regalo personalizzate e ispirazione per regali. Scopri perché l\'abbigliamento personalizzato è perfetto per compleanni, feste, anniversari e occasioni speciali.',
		keywords: 'idee regalo, regali personalizzati, idee per regali, regali personalizzati, regali compleanno, regali feste, regali anniversario, regali laurea, regali aziendali, regali abbigliamento personalizzato',
		lang: 'it'
	}
};

const currentLang = defaultLang as 'en' | 'it';
const seo = seoData[currentLang];
---

<html lang={seo.lang} data-lang={currentLang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{seo.title}</title>
		<meta name="title" content={seo.title} />
		<meta name="description" content={seo.description} />
		<meta name="keywords" content={seo.keywords} />
		<meta name="robots" content="index, follow" />
		<meta name="language" content={seo.lang === 'it' ? 'Italian' : 'English'} />
		<meta name="author" content="Snaphalagulus" />
		
		<!-- Alternate Languages -->
		<link rel="alternate" hreflang="en" href={`${siteUrl}/blog`} />
		<link rel="alternate" hreflang="it" href={`${siteUrl}/blog`} />
		<link rel="alternate" hreflang="x-default" href={`${siteUrl}/blog`} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={`${siteUrl}/blog`} />
		<meta property="og:title" content={seo.title} />
		<meta property="og:description" content={seo.description} />
		<meta property="og:image" content={`${siteUrl}${logoImage.src}`} />
		<meta property="og:site_name" content="Snaphalagulus" />
		<meta property="og:locale" content={seo.lang === 'it' ? 'it_IT' : 'en_US'} />
		<meta property="og:locale:alternate" content={seo.lang === 'it' ? 'en_US' : 'it_IT'} />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={`${siteUrl}/blog`} />
		<meta property="twitter:title" content={seo.title} />
		<meta property="twitter:description" content={seo.description} />
		<meta property="twitter:image" content={`${siteUrl}${logoImage.src}`} />
		
		<!-- Favicon -->
		<link rel="icon" type="image/png" href={logoImage.src} />
		<link rel="canonical" href={`${siteUrl}/blog`} />
		
		<!-- Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "Blog",
			"name": seo.lang === 'it' ? "Blog Snaphalagulus" : "Snaphalagulus Blog",
			"description": seo.description,
			"url": `${siteUrl}/blog`,
			"inLanguage": seo.lang,
			"publisher": {
				"@type": "Organization",
				"name": "Snaphalagulus",
				"logo": {
					"@type": "ImageObject",
					"url": `${siteUrl}${logoImage.src}`
				}
			}
		})} />
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			:root {
				--bg-color: #f5f5dc;
				--primary-color: #000000;
				--accent-color: #ff006e;
				--border-thick: 4px;
				--shadow-offset: 8px;
			}

			body {
				font-family: 'Arial Black', 'Helvetica Neue', Arial, sans-serif;
				background-color: var(--bg-color);
				color: var(--primary-color);
				line-height: 1.6;
				min-height: 100vh;
			}

			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 20px;
			}

			/* Header */
			header {
				border: var(--border-thick) solid var(--primary-color);
				background: white;
				padding: 30px;
				margin-bottom: 40px;
				box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--primary-color);
			}

			.logo-section {
				display: flex;
				align-items: center;
				gap: 20px;
				flex-wrap: wrap;
			}

			.logo {
				max-width: 150px;
				height: auto;
				border: var(--border-thick) solid var(--primary-color);
			}

			h1 {
				font-size: 3rem;
				font-weight: 900;
				text-transform: uppercase;
				letter-spacing: -2px;
			}

			/* Navigation */
			nav {
				border: var(--border-thick) solid var(--primary-color);
				background: white;
				padding: 20px 30px;
				margin-bottom: 40px;
				box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--primary-color);
			}

			nav ul {
				list-style: none;
				display: flex;
				gap: 30px;
				flex-wrap: wrap;
				justify-content: center;
				align-items: center;
			}

			nav a {
				color: var(--primary-color);
				text-decoration: none;
				font-size: 1.2rem;
				font-weight: 900;
				text-transform: uppercase;
				transition: color 0.2s;
			}

			nav a:hover {
				color: var(--accent-color);
			}

			/* Language Switcher */
			.language-switcher {
				display: flex;
				gap: 10px;
				align-items: center;
				margin-left: auto;
			}

			.language-switcher button {
				padding: 8px 16px;
				border: var(--border-thick) solid var(--primary-color);
				background: white;
				color: var(--primary-color);
				font-weight: 900;
				font-size: 0.9rem;
				cursor: pointer;
				text-transform: uppercase;
				transition: all 0.2s;
			}

			.language-switcher button:hover {
				background: var(--primary-color);
				color: white;
			}

			.language-switcher button.active {
				background: var(--accent-color);
				color: white;
				border-color: var(--accent-color);
			}

			/* Blog Header */
			.blog-header {
				border: var(--border-thick) solid var(--primary-color);
				background: var(--accent-color);
				color: white;
				padding: 60px 40px;
				margin-bottom: 40px;
				text-align: center;
				box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--primary-color);
			}

			.blog-header h2 {
				font-size: 2.5rem;
				margin-bottom: 20px;
				font-weight: 900;
			}

			.blog-header p {
				font-size: 1.3rem;
				font-weight: bold;
			}

			/* Blog Posts */
			.blog-posts {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
				gap: 40px;
				margin-bottom: 60px;
			}

			.blog-card {
				border: var(--border-thick) solid var(--primary-color);
				background: white;
				padding: 40px;
				box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--primary-color);
				transition: transform 0.2s;
			}

			.blog-card:hover {
				transform: translate(-2px, -2px);
				box-shadow: calc(var(--shadow-offset) + 2px) calc(var(--shadow-offset) + 2px) 0 var(--primary-color);
			}

			.blog-card h3 {
				font-size: 1.8rem;
				margin-bottom: 15px;
				text-transform: uppercase;
				font-weight: 900;
				color: var(--accent-color);
			}

			.blog-date {
				font-size: 0.9rem;
				color: #666;
				margin-bottom: 15px;
				font-weight: bold;
			}

			.blog-card p {
				font-size: 1.1rem;
				line-height: 1.8;
				margin-bottom: 20px;
				font-weight: bold;
			}

			.blog-tags {
				display: flex;
				gap: 10px;
				flex-wrap: wrap;
				margin-top: 20px;
			}

			.blog-tag {
				border: 2px solid var(--primary-color);
				background: var(--bg-color);
				padding: 5px 15px;
				font-size: 0.9rem;
				font-weight: bold;
				text-transform: uppercase;
			}

			/* Responsive */
			@media (max-width: 768px) {
				h1 {
					font-size: 2rem;
				}

				.blog-header h2 {
					font-size: 1.8rem;
				}

				nav ul {
					flex-direction: column;
					gap: 15px;
				}

				.blog-posts {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<div class="container">
			<header>
				<div class="logo-section">
					<img src={logoImage.src} alt="Snaphalagulus Custom Clothing Logo - Personalized T-Shirts, Hoodies, and Apparel" class="logo" width={logoImage.width} height={logoImage.height} />
					<h1>Snaphalagulus</h1>
				</div>
			</header>

			<nav>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/blog">Blog</a></li>
					<li class="language-switcher">
						<button id="lang-en" data-lang="en">EN</button>
						<button id="lang-it" data-lang="it">IT</button>
					</li>
				</ul>
			</nav>

			<section class="blog-header">
				<h2>Gift Ideas & Present Inspiration</h2>
				<p>Discover the perfect personalized gifts for every occasion</p>
			</section>

			<section class="blog-posts">
				<article class="blog-card">
					<h3>Why Personalized Gifts Make the Best Presents</h3>
					<div class="blog-date">December 15, 2024</div>
					<p>
						Personalized gifts show that you've put thought and effort into choosing something special. Custom clothing with names, dates, or meaningful quotes creates a unique connection between the giver and receiver. Unlike generic presents, personalized items tell a story and create lasting memories.
					</p>
					<p>
						Whether it's a birthday, anniversary, graduation, or holiday celebration, a custom T-shirt or hoodie with a personal touch makes any gift recipient feel truly special. The best part? They'll treasure it for years to come!
					</p>
					<div class="blog-tags">
						<span class="blog-tag">Gift Ideas</span>
						<span class="blog-tag">Personalization</span>
						<span class="blog-tag">Holidays</span>
					</div>
				</article>

				<article class="blog-card">
					<h3>Perfect Holiday Presents: Custom Clothing Edition</h3>
					<div class="blog-date">December 10, 2024</div>
					<p>
						The holiday season is all about giving meaningful presents to the people you love. Custom clothing has become one of the most popular gift choices because it combines practicality with personalization. Imagine gifting someone a cozy hoodie with their favorite quote or a family photo printed on it!
					</p>
					<p>
						From Christmas mornings to New Year's celebrations, custom T-shirts and mugs make wonderful presents that show you care. They're perfect for family members, friends, or even as corporate gifts for your team. Plus, custom items are always in style!
					</p>
					<div class="blog-tags">
						<span class="blog-tag">Holidays</span>
						<span class="blog-tag">Custom Gifts</span>
						<span class="blog-tag">Seasonal</span>
					</div>
				</article>

				<article class="blog-card">
					<h3>Birthday Present Ideas That Actually Stand Out</h3>
					<div class="blog-date">December 5, 2024</div>
					<p>
						Tired of giving the same old birthday presents? Custom clothing is the answer! A personalized shirt with the birthday person's name, age, or a funny inside joke will definitely make their special day even more memorable.
					</p>
					<p>
						The beauty of custom presents is that they're completely unique. You can design something that perfectly matches the recipient's personality, style, and interests. Whether they're into sports, music, art, or humor, there's a custom design that will make them smile!
					</p>
					<div class="blog-tags">
						<span class="blog-tag">Birthdays</span>
						<span class="blog-tag">Unique Gifts</span>
						<span class="blog-tag">Celebrations</span>
					</div>
				</article>

				<article class="blog-card">
					<h3>Corporate Gifts: Personalized Apparel for Your Team</h3>
					<div class="blog-date">November 28, 2024</div>
					<p>
						Looking for the perfect company gifts for your employees or clients? Custom branded clothing is an excellent choice for corporate presents. Custom T-shirts, hoodies, or mugs with your company logo or a team slogan build unity and brand awareness.
					</p>
					<p>
						Corporate gifts don't have to be boring! Personalized apparel shows appreciation while creating a sense of belonging. They're perfect for team building events, company anniversaries, or as thank-you presents for valued clients.
					</p>
					<div class="blog-tags">
						<span class="blog-tag">Corporate</span>
						<span class="blog-tag">Business</span>
						<span class="blog-tag">Team Building</span>
					</div>
				</article>

				<article class="blog-card">
					<h3>Anniversary Gifts: Creating Custom Memories</h3>
					<div class="blog-date">November 20, 2024</div>
					<p>
						Anniversary presents should celebrate the memories you've shared together. Custom clothing with your wedding date, a meaningful quote, or even a map of where you first met makes for a truly romantic and thoughtful gift.
					</p>
					<p>
						Whether it's your first anniversary or your 50th, custom T-shirts or hoodies can commemorate your special day in a unique way. Matching his-and-hers designs are also incredibly popular for couples who want to show their connection!
					</p>
					<div class="blog-tags">
						<span class="blog-tag">Anniversaries</span>
						<span class="blog-tag">Romance</span>
						<span class="blog-tag">Special Occasions</span>
					</div>
				</article>

				<article class="blog-card">
					<h3>Graduation Presents: Celebrate Their Achievement</h3>
					<div class="blog-date">November 15, 2024</div>
					<p>
						Graduation is a major milestone worth celebrating with a special present! Custom clothing with the graduate's name, graduation year, or school logo makes a meaningful gift they'll appreciate for years to come.
					</p>
					<p>
						From high school to college graduations, personalized hoodies and T-shirts are perfect presents that celebrate achievement while being practical for everyday wear. They're especially popular among graduates who want to remember their alma mater!
					</p>
					<div class="blog-tags">
						<span class="blog-tag">Graduation</span>
						<span class="blog-tag">Education</span>
						<span class="blog-tag">Milestones</span>
					</div>
				</article>
			</section>
		</div>

		<script>
			// Language detection and switching
			(function() {
				const storedLang = localStorage.getItem('preferredLanguage');
				const html = document.documentElement;
				
				// Update HTML lang attribute if language is stored
				if (storedLang && (storedLang === 'en' || storedLang === 'it')) {
					html.lang = storedLang;
					html.setAttribute('data-lang', storedLang);
				}
			})();
			
			// Language switcher
			document.addEventListener('DOMContentLoaded', () => {
				const currentLanguage = localStorage.getItem('preferredLanguage') || 'en';
				
				// Update language switcher active state immediately
				const langButtons = document.querySelectorAll('[data-lang]');
				langButtons.forEach(button => {
					const btn = button as HTMLElement;
					const lang = btn.dataset.lang;
					if (lang === currentLanguage) {
						btn.classList.add('active');
					} else {
						btn.classList.remove('active');
					}
					
					// Language switcher click handler
					btn.addEventListener('click', (e) => {
						e.preventDefault();
						e.stopPropagation();
						const newLang = btn.dataset.lang;
						if (newLang && (newLang === 'en' || newLang === 'it')) {
							localStorage.setItem('preferredLanguage', newLang);
							window.location.reload();
						}
					});
				});
			});
		</script>
	</body>
</html>

